@{
	ViewData["Title"] = "Tournament Details";
	var tournamentId = ViewData["TournamentId"];
}
<div class="container-fluid">
	<h2 id="tournamentTitle">
		<span></span>
		<button id="renameTournamentBtn" class="btn btn-sm btn-outline-primary ms-2" title="Rename Tournament">
			<i class="fas fa-edit"></i>
		</button>
	</h2>
	<div id="tournamentMeta"></div>
	<div id="tournament" data-tournament-id="@tournamentId" class="row">
		<!-- Left Column: Players -->
		<div class="col-md-3" id="left">
			<h6>
				Players
				<button id="reloadPlayersBtn" class="btn btn-sm btn-outline-primary ms-2" title="Reload Players">
					<i class="fas fa-sync"></i>
				</button>
			</h6>
			<div id="playersContainer" class="text-muted">Loading...</div>
		</div>

		<!-- Center Column: Match or Controls -->
		<div class="col-md-6 text-center" id="center">
			<h6>Match</h6>
			<div class="text-muted">Loading...</div>
		</div>

		<!-- Right Column: Leaderboard -->
		<div class="col-md-3" id="right">
			<h6>
				Leaderboard
				<button id="reloadLeaderboardBtn" class="btn btn-sm btn-outline-primary ms-2" title="Reload Leaderboard">
					<i class="fas fa-sync"></i>
				</button>
			</h6>
			<div id="leaderboardContainer" class="text-muted">Loading...</div>
		</div>
	</div>
	<div class="row d-none" id="matchesPanel">
		<div class="col-12">
			<button class="btn btn-outline-primary" id="toggleMatchesBtn">
				Hide Matches
			</button>
			<div id="matchesContainer" class="mt-3 row"></div>
		</div>
	</div>
</div>

@section Scripts {
	<script type="module" src="~/js/dist/tournament.details.js" asp-append-version="true"></script>
}