@{
    ViewData["Title"] = "Tournaments";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Tournaments</h2>
    <button id="createTournamentBtn" class="btn btn-primary">➕ Create a Tournament</button>
</div>

<table class="table table-striped" id="tournamentTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Players</th>
            <th>Matches</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="tournamentBody"></tbody>
</table>

@section Scripts {
    <script type="module" src="~/js/dist/tournament.index.js"></script>
}