{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "outDir": "./wwwroot/js/dist",
    "rootDir": "./wwwroot/js/src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "wwwroot/js/src/**/*.ts" ]
}